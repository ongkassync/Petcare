<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light">

    <LinearLayout
        android:id="@+id/profile_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="28dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Profile Image -->
        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="88dp"
            android:layout_height="90dp"
            android:layout_marginEnd="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/cat" />

        <!-- Profile Name and Edit Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Mariano III Ongkas"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/edit_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit personal details"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/change_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Password"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_below="@id/profile_section"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>

    <ImageView
        android:id="@+id/notification_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/change_password"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>

    <Switch
        android:id="@+id/notif"
        android:layout_width="362dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/notification_icon"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Notification"
        android:textSize="16sp" />

    <Switch
        android:id="@+id/dark_mode_switch"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/notif"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Dark Mode"
        android:textSize="16sp" />

    <Button
        android:id="@+id/button_edit_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dark_mode_switch"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Log out"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:background="@color/black" />

</RelativeLayout>
